<h2 align="center"> <%= @article.title %> </h2>

<div class="well col-xs-8 col-xs-offset-2">

  <% if @article.user %>
      <div class="row">
        <div class="col-md-4 col-md-offset-4 center">
          <%= gravatar_for @article.user, size: 150 %>
        </div>
      </div>
      <h4 align="center"><%= @article.user.username %>'s</h4>
  <% end %>

  <h4 class="center"><strong>Description: </strong></h4>
  <hr>
  <%= simple_format(@article.desc) %>

  <div class="article-actions">


    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
        <%= link_to 'Edit This Article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Delete This Article', article_path(@article), method: :delete, class: "btn btn-xs btn-danger" %>
    <% end %>


    <%= link_to 'View All Articles', articles_path, class: "btn btn-xs btn-success" %>

  </div>
</div>
