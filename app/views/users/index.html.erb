<h1 align="center">All Heroes</h1>

<div align="center">
  <%= will_paginate @users%>
</div>
<% @users.each do |user| %>
    <div align="center">
      <div class="row">
        <ul class="listing">
          <li><%= link_to gravatar_for(user, size: 80), user_path(user) %></li>
          <li> <%= user.email %></li>
          <li><%= "#{user.articles.count} articles" %></li>
          <% if logged_in? && current_user.admin? %>
          <li> <%= link_to "Delete this user", user_path(user) , method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?" }  %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>

<div align="center">
  <%= will_paginate @users%>
</div>