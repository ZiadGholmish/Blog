
<h1 align="center">Sign up For To add articles</h1>

<%= render "shared/errors" , obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user , :html => {class: "form-horizontal" , role: "form"}) do |f|  %>

        <div class="form-group">
          <div class="col-sm-2 control-label"> <%= f.label :username %> </div>
          <div class="col-sm-8">
            <%= f.text_field :username , class:"form-control" , placeholder: "Please enter the user name" , autofocus: true %>
          </div>
        </div>


        <div class="form-group">
          <div class="col-sm-2 control-label"> <%= f.label :email%>  </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class:"form-control" , rows: 10 , placeholder: "Please enter the email" , autofocus: true %>
          </div>
        </div>


        <div class="form-group">
          <div class="col-sm-2 control-label"> <%= f.label :password%>  </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class:"form-control" , rows: 10 , placeholder: "Please enter password" , autofocus: true %>
          </div>
        </div>


        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%=  f.submit "Sign up" , class: "btn btn-primary btn-lg" %>
          </div>
        </div>
    <%end %>


  </div>

</div>

